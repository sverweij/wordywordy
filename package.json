{
  "name": "wordywordy",
  "version": "0.1.20",
  "description": "WordyWordy takes text that's dropped on it and shows it. One word at a time. As fast as you want. Or as slow.",
  "main": "index.html",
  "dependencies": {
    "amdefine": "1.0.0",
    "requirejs": "2.1.20"
  },
  "devDependencies": {
    "node-sass": "3.2.0",
    "mocha": "2.2.5",
    "codeclimate-test-reporter": "0.1.0",
    "codecov.io": "0.1.5",
    "csslint": "0.10.0",
    "istanbul": "0.3.17",
    "jshint": "2.8.0",
    "plato": "1.5.0",
    "nsp": "1.0.3"
  },
  "scripts": {
    "lint": "jshint src/script  --verbose --show-non-errors",
