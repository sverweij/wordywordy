{
  "name": "wordywordy",
  "version": "1.0.1",
  "description": "WordyWordy takes text that's dropped on it and shows it. One word at a time. As fast as you want. Or as slow.",
  "main": "index.html",
  "dependencies": {
    "amdefine": "1.0.1",
    "requirejs": "2.3.5",
    "screenfull": "3.3.1"
  },
  "devDependencies": {
    "chai": "4.1.2",
    "codeclimate-test-reporter": "0.5.0",
    "dependency-cruiser": "2.4.1",
    "eslint": "4.8.0",
    "eslint-plugin-security": "1.4.0",
    "istanbul": "0.4.5",
    "js-makedepend": "2.2.7",
    "mocha": "3.5.3",
    "node-sass": "4.5.3",
    "npm-check-updates": "2.12.1",
    "nsp": "2.8.1",
    "plato": "1.7.0",
    "uglify-js": "3.1.3"
  },
  "scripts": {
    "codeclimate-cover-submit": "node node_modules/codeclimate-test-reporter/bin/codeclimate.js < coverage/lcov.info",
    "depcruise": "depcruise -x node_modules -v -- src",
    "depcruise:graph": "depcruise -x \"node_modules|test\" -T dot src | dot -T svg > tmp_deps.svg",
    "lint": "eslint src/script service-worker.js",
    "lint:fix": "eslint --fix src/script service-worker.js",
    "npm-check-updates": "ncu --upgrade",
    "nsp": "nsp check",
    "plato": "plato -r -d platoreports -x \"test\" src/script/",
    "test": "mocha -R dot src/script/test/",
    "test:cover": "istanbul cover node_modules/mocha/bin/_mocha src/script/test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sverweij/wordywordy.git"
  },
  "author": "Sander Verweij",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/sverweij/wordywordy/issues"
  },
  "homepage": "https://github.com/sverweij/wordywordy"
}
