{
  "root": true,
  "extends": ["eslint:recommended", "plugin:security/recommended", "prettier"],
  "overrides": [
    {
      "files": ["src/script/**/*.js"],
      "env": {
        "amd": true,
        "node": true,
        "browser": true
      },
      "rules": {
        "security/detect-non-literal-require": "off"
      }
    },
    {
      "files": ["src/script/test/**/*.js"],
      "env": {
        "mocha": true
      },
      "rules": {
        "max-lines": "off",
        "max-lines-per-function": "off"
      }
    }
  ]
}
